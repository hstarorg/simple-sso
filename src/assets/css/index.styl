.page-index {
  .ui.card {
    width: auto;
  }

  .user-card {
    width: 500px;
    margin: 0 auto;
    border-radius: 10px;
    box-shadow: 0 1px 2px 0 rgba(34, 36, 38, 0.15);

    .user-avatar img {
      width: 30%;
      margin-left: 35%;
      border-radius: 50%;
    }
  }
}

@media screen and (max-width: 750px) {
  .page-index {
    .user-card {
      width: 100%;
    }
  }

  .layui-table {
    margin-top: 0;
  }

  .layui-main {
    width: auto;
  }
}
