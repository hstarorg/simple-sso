.sso-header {
  background: #1B1C1D;
  height: 50px;

  .layui-nav {
    background: #1B1C1D;

    .layui-nav-item {
      line-height: 50px;
    }
  }

  .logo {
    position: absolute;
    color: rgba(255, 255, 255, 0.9);
    line-height: 50px;
  }
}

.container {
  width: 1140px;
  margin: 0 auto;
}

/* component styles */
.lv-modal .layui-layer-page {
  min-height: 260px;
}

.lv-modal .layui-layer-content {
  min-height: 158px;
}

.lv-modal .layui-layer-btn.layui-layer-btn- {
  border-top: 1px solid #eee;
}

[v-cloak] {
  display: none !important;
}

// 登录注册盒子
.lr-box {
  width: 450px;
  margin: 0 auto;
  border: 1px solid rgba(34, 36, 38, 0.15);
  box-shadow: 0 1px 2px 0 rgba(34, 36, 38, 0.15);
  border-radius: 4px;

  .box-header {
    padding: 24px;

    span {
      font-size: 20px;
    }

    .right-link {
      line-height: 26px;
      color: #E66700;
    }
  }

  .layui-form {
    width: 76%;
    margin-left: 12%;

    .layui-input-block {
      margin-left: 0;
    }

    .btn-black {
      background: #1b1c1d;
      width: 100%;
    }
  }
}

@media screen and (max-width: 750px) {
  .lr-box {
    width: 90%;
  }
}
