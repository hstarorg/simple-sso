$before-after-common {
  content: '';
  display: table-cell;
  position: relative;
  top: 50%;
  width: 50%;
  background-repeat: no-repeat;
  background-image: url('data:image/png;base64,');
}

.page-login {
  padding-top: 100px;

  .login-box {
    width: 450px;
    margin: 0 auto;
    border: 1px solid rgba(34, 36, 38, 0.15);
    box-shadow: 0 1px 2px 0 rgba(34, 36, 38, 0.15);
    border-radius: 4px;

    .layui-form {
      width: 76%;
      margin-left: 12%;

      .layui-input-block {
        margin-left: 0;
      }

      .forget-password {
        line-height: 36px;
      }

      .btn-login {
        background: #1b1c1d;
        width: 100%;
      }
    }

    .login-header {
      padding: 24px;

      span {
        font-size: 20px;
      }

      .register-link {
        line-height: 26px;
        color: #E66700;
      }
    }

    .other-login-divider {
      display: table;
      white-space: nowrap;

      &::before {
        background-position: right 1em top 50%;
        @extend $before-after-common;
      }

      &::after {
        background-position: left 1em top 50%;
        @extend $before-after-common;
      }
    }

    .other-login-btns {
      .layui-btn {
        padding: 0 10px;
      }
    }
  }
}

.login-header11 {
  font-size: 20px;
  margin-bottom: 15px;

  >div {
    display: inline-block;
  }

  .register {
    font-size: 14px;
    line-height: 30px;
    float: right;

    a {
      color: #E66700;
    }
  }
}

.sso-other-login {
  font-size: 14px;
  color: #9B9B9B;
  font-weight: normal;
}

.other-login-list {
  width: 100%;
  text-align: center;
}
